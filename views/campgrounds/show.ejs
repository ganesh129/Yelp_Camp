<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelpcamp</p>
            <div class="list-group">
                    <li class="list-group-item">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                
               
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                    <img class="img-responsive" src="<%=campground.image%>">
                    <a href="/campgrounds/<%=campground._id%>/edit"><button class="btn btn-primary btn-md">Edit Campground</button></a>
                    <form style="display:inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger ">DELETE</button>
                    </form>
            
                    <div class="caption-full">
                        <h4 class="pull-right">Rs </h4>
                        <h4><a><%=campground.name%></a></h4>
                        <p><%=campground.description%></p>
                    </div>
            </div>
                <div class="text-right">
                        <a href="/campgrounds/<%=campground._id%>/comments/new"><btn class="btn btn-primary btn-md">Add comment</btn></a>
                </div>
                <% campground.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=comment.author.username%></strong>
                            <span class="pull-right">10 minutes ago</span>
                            <p>
                              <%=comment.text%>
                            </p>
                            <div class="pull-right">
                                    <a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit"class="btn btn-default">Edit</a>
                                
                                     <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                        <input type="submit" class="btn btn-danger btn-xs" value="Delete">
                                     </form>

                            </div>
                        </div>
                    </div>
                    
                
                <%})%>
        </div>
</div>

</div>

<% include ../partials/footer%>